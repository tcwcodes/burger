<container>

    <div class="jumbotron">
        <h1 class="display-4">Bob's Burgers</h1>
        <hr class="my-4">
        <p>Enter a burger you want to eat, then click the "submit" button.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <ul>
                {{#each burgers}}
                <li>
                    <h3>{{this.burger_name}} </h3>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <form role="form">
                <div class="form-group">
                    <label for="burger-name">What'll it be?</label>
                    <input type="text" class="form-control" id="burger-input">
                </div>
                <button type="submit" class="btn btn-primary" id="burger-submit">Submit</button>
            </form>
        </div>
        <div class="col-md-4">
        </div>
    </div> 

</container>